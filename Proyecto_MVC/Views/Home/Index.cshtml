        </div>
    </div>
</div>

<div class="row">

    <div class="container">
        <div class="row cards">

            @foreach (var vuelos in ViewBag.ListarVuelos)

            {
                if (@vuelos.Estado == 1)
                {

                    <div class="card">
                        <div class="card-image" style="background-image: url(@vuelos.Foto)"></div>
                        <div class="badge">
                            <span>@vuelos.Tipo_Vuelo</span>
                        </div>
                        <div class="card-content">
                            <h3>@vuelos.Nombre_departamentoDestino</h3>
                            <p>S/. @vuelos.Precio</p>
                            <small>@vuelos.Nombre_Aerolinea</small>
                            <small>@vuelos.NombreAeropuertoOrigen</small>
                            <small>Asiento: @vuelos.Letra - @vuelos.Fila</small>

                        </div>
                        @if (Session["UserNombre"] != null)
                        {

                            using (Html.BeginForm("Reserva", "Home", FormMethod.Post))
                            {
                                <fieldset>

                                    <table>
                                        <tr>
                                            <td>
                                                <input type="hidden" name="idPasajero" value="@Session["UserId"].ToString()" />
                                                <input type="hidden" name="idReserva" value="@vuelos.IdReserva" />
                                                <button class="btn btn-primary btn-lg"> Generar reserva </button>
                                            </td>

                                        </tr>

                                    </table>
                                </fieldset>
                            }
                        }

                    </div>

                }
                else
                {

                }


            }


        </div>
    </div>

</div>